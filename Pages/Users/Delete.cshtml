@page
@model QuestionnaireApp.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete";
    bool isSelectedUserAnAdmin = !(Model.UserClaims.FirstOrDefault(m => m.UserId == Model.SelectedUser.Id) == null);
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedUser.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelectedUser.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedUser.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelectedUser.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelectedUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedUser.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelectedUser.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedUser.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelectedUser.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserClaims)
        </dt>
        <dd class="col-sm-10">
            @if (!isSelectedUserAnAdmin)
            {
                @: False
            }
            @Html.DisplayFor(model => model.UserClaims.FirstOrDefault(m => m.UserId == model.SelectedUser.Id).ClaimValue)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="SelectedUser.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

