@page
@model QuestionnaireApp.Pages.Groups.DetailsModel

@{
    ViewData["Title"] = "Group Details";
}

<h1>Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
        </dd>
        <dt class="col-sm-2">
            Member Count
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.UserGroups.Count)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.UserGroups)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Group.UserGroups[0].User.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Group.UserGroups[0].User.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Group.UserGroups[0].User.Email)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Group.UserGroups)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Email)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Group.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
