@page "{questions?}"
@model QuestionnaireApp.Pages.Questionnaires.CreateModel
@using QuestionnaireApp.Models;
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Questionnaire</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Questionnaire.Title" class="control-label"></label>
                <input asp-for="Questionnaire.Title" class="form-control" />
                <span asp-validation-for="Questionnaire.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Questionnaire.Description" class="control-label"></label>
                <input asp-for="Questionnaire.Description" class="form-control" />
                <span asp-validation-for="Questionnaire.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Questionnaire.DueDate" class="control-label"></label>
                <input asp-for="Questionnaire.DueDate" class="form-control" />
                <span asp-validation-for="Questionnaire.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Questionnaire.Targets" class="control-label"></label>
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;

                                foreach (var group in Model.QuestionnaireAssignedGroupsDataList)
                                {
                                    if (cnt++ % 6 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedGroups"
                                               value="@group.GroupID"
                                               @(Html.Raw(group.Assigned ? "checked=\"checked\"" : "")) />
                                        @group.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                <span asp-validation-for="Questionnaire.Targets" class="text-danger"></span>
             </div>
                <div class="form-group">
                    <label asp-for="Questionnaire.Questions[0].Content" class="control-label"></label> 1
                    <input asp-for="Questionnaire.Questions[0].Content" class="form-control" />
                    <span asp-validation-for="Questionnaire.Questions[0].Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Questionnaire.Questions[0].QuestionType" class="control-label"></label>
                    <select asp-for="Questionnaire.Questions[0].QuestionType" class="form-control"
                            asp-items="@Html.GetEnumSelectList<QuestionTypes>()"></select>
                    <span asp-validation-for="Questionnaire.Questions[0].QuestionType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Questionnaire.Questions[0].Answers[0].Content" class="control-label"></label> 1
                    <input asp-for="Questionnaire.Questions[0].Answers[0].Content" class="form-control" />
                    <span asp-validation-for="Questionnaire.Questions[0].Answers[0].Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Questionnaire.Questions[0].Answers[1].Content" class="control-label"></label> 2
                    <input asp-for="Questionnaire.Questions[0].Answers[1].Content" class="form-control" />
                    <span asp-validation-for="Questionnaire.Questions[0].Answers[1].Content" class="text-danger"></span>
                </div>
                @{
                    int j = 2;
                    while (QuestionnairesPageModel.NumberOfQuestions[0] > j)
                    {
                        <div class="form-group">
                            <label asp-for="Questionnaire.Questions[0].Answers[j].Content" class="control-label"></label> @(j + 1)
                            <input asp-for="Questionnaire.Questions[0].Answers[j].Content" class="form-control" />
                            <span asp-validation-for="Questionnaire.Questions[0].Answers[j].Content" class="text-danger"></span>
                        </div>
                        j++;
                    }
                }
                <div class="form-group">
                    <a asp-page="./Create" asp-route-answers="0">Add answer</a>
                </div>
                @{
                    int i = 1;
                    while (i < QuestionnairesPageModel.NumberOfQuestions.Count)
                    {
                        <div class="form-group">
                            <label asp-for="Questionnaire.Questions[i].Content" class="control-label"></label> @(i + 1)
                            <input asp-for="Questionnaire.Questions[i].Content" class="form-control" />
                            <span asp-validation-for="Questionnaire.Questions[i].Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Questionnaire.Questions[i].QuestionType" class="control-label"></label>
                            <select asp-for="Questionnaire.Questions[i].QuestionType" class="form-control"
                                    asp-items="@Html.GetEnumSelectList<QuestionTypes>()"></select>
                            <span asp-validation-for="Questionnaire.Questions[i].QuestionType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Questionnaire.Questions[i].Answers[0].Content" class="control-label"></label> 1
                            <input asp-for= "Questionnaire.Questions[i].Answers[0].Content" class="form-control" />
                            <span asp-validation-for="Questionnaire.Questions[i].Answers[0].Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Questionnaire.Questions[i].Answers[1].Content" class="control-label"></label> 2
                            <input asp-for= "Questionnaire.Questions[i].Answers[1].Content" class="form-control" />
                            <span asp-validation-for="Questionnaire.Questions[i].Answers[1].Content" class="text-danger"></span>
                        </div>
                        int x = 2;
                        while (QuestionnairesPageModel.NumberOfQuestions[i] > x)
                        {
                            <div class="form-group">
                                <label asp-for="Questionnaire.Questions[i].Answers[x].Content" class="control-label"></label> @(x + 1)
                                <input asp-for="Questionnaire.Questions[i].Answers[x].Content" class="form-control" />
                                <span asp-validation-for="Questionnaire.Questions[i].Answers[x].Content" class="text-danger"></span>
                            </div>
                            x++;
                        }
                        <div class="form-group">
                            <a asp-page="./Create" asp-route-answers="@i">Add answer</a>
                        </div>
                        ++i;
                    }
                }
                <div class="form-group">
                    <a asp-page="./Create" asp-route-questions="@QuestionnairesPageModel.NumberOfQuestions.Count">Add question</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
